% Bilingual abstract (english-native)
\newcommand{\biabstract}[2]
{
    \titlepage\null\vfil

    \begin{otherlanguage}{english}
        \begin{center}
            \bfseries \abstractname
        \end{center}
        #1
    \end{otherlanguage}

    \begin{center}
        \bfseries \abstractname
    \end{center}
    #2

    \par\vfil\null\endtitlepage
}

